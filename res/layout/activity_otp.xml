<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Back button icon -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="start"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="Back"
        android:layout_marginTop="16dp"/>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="32dp"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We sent a reset link to contact@dscode...com\nEnter 5 digit code that mentioned in the email"
        android:textAlignment="center"
        android:textColor="#808080"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>

    <!-- OTP Boxes -->
    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1" />
    </LinearLayout>

    <!-- Verify Button -->
    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Verify Code"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"/>

    <!-- Resend Link (Container for horizontal layout) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/resendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haven't got the email yet? "
            android:textColor="#808080"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/resendLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend email"
            android:textColor="#3B82F6"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
