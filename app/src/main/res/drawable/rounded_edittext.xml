<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#f0f1f7"/>

    <!-- Rounded corners -->
    <corners android:radius="10dp"/>

    <!-- Border / stroke -->
    <stroke
        android:width="2dp"
        android:color="#B0B0B0"/>

    <padding
        android:left="26dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp"/>
</shape>